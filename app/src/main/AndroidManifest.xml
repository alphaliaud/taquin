<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hperchec.taquin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PreGameActivity">
            <intent-filter>
                <action android:name="android.intent.action.PREGAME" />
            </intent-filter>
        </activity>
        <activity android:name=".GameActivity">
            <intent-filter>
                <action android:name="android.intent.action.GAME" />
            </intent-filter>
        </activity>
        <activity android:name=".ScoreActivity">
            <intent-filter>
                <action android:name="android.intent.action.SCORE" />
            </intent-filter>
        </activity>
        <activity android:name=".PostGameActivity">
            <intent-filter>
                <action android:name="android.intent.action.POSTGAME" />
            </intent-filter>
        </activity>
    </application>

</manifest>